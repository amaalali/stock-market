  "private": true,
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "@typescript-eslint/typescript-estree": "^1.9.0",
    "autoprefixer": "^9.5.1",
    "eslint": "^5.16.0",
    "mathjs": "^5.10.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-scripts": "^3.0.1",
