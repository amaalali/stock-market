{
  "name": "super-simple-stock-market",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-scripts": "3.0.1",
    "react-testing-library": "^7.0.0",
    "reduce-reducers": "^1.0.4",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "build:css": "postcss src/styles/tailwind.css -o src/index.css",
    "watch:css": "postcss src/styles/tailwind.css -o src/index.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^5.1.1",
    "jest-dom": "^3.4.0",
    "tailwindcss": "^1.0.1",
    "user-event": "^3.0.3"
  }
}
